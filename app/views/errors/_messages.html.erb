<% for name in [:info, :warning, :error] %>
  <% if flash[name] %>
    <div class="<%= "#{name}-message message" %>">
      <%= h flash[name] %>
      <% if request.xhr? %>
        <a href="#" onclick="ActiveScaffold.remove(this.parentNode); return false;" title="<%= as_(:close) %>"><%= as_(:close) %></a>
      <% end %>
    </div>
  <% end %>
<% end %>
