<%= render :partial => "users/shared/links" %>

<%= simple_form_for(resource,
    as: resource_name,
    url: unlock_path(resource_name),
    method: :post
  ) do |f| %>
  
  <%= devise_error_messages! %>

  <%= f.input :email, required: true %>

  <%= f.submit "Resend unlock instructions", class: 'btn btn-primary' %>
<% end %>
